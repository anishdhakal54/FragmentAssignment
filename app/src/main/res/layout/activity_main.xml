<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area Of Circle"
                    android:textSize="10sp"
                    android:id="@+id/btnCircle"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ArmStrong Number"
                    android:textSize="10sp"
                    android:id="@+id/btnArmstrong"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automorphic Number"
                    android:textSize="10sp"
                    android:id="@+id/btnAutomorphic"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Palindrome Number"
                    android:textSize="10sp"
                    android:id="@+id/btnPalindrome"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simple Interest"
                    android:textSize="10sp"
                    android:id="@+id/btnSimpleinterest"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swap Number"
                    android:textSize="10sp"
                    android:id="@+id/btnSwap"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"/>

        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/fragView">

        </LinearLayout>



</LinearLayout>